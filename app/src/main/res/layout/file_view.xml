<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/imgFile"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:layout_marginLeft="16dp"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/imgFile"
        app:layout_constraintLeft_toRightOf="@id/imgFile"
        android:id="@+id/txtFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtFileName"
        app:layout_constraintLeft_toLeftOf="@id/txtFileName"
        android:textSize="12sp"
        android:id="@+id/txtFileMetaData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>